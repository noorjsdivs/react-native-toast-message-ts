{
  "name": "react-native-toast-message-ts",
  "version": "1.0.6",
  "description": "A modern, customizable toast notification library for React Native & Expo with TypeScript support, multi-toast queue, swipe-to-dismiss, and smooth animations",
  "main": "./lib/index.js",
  "module": "./lib/index.esm.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/noorjsdivs/react-native-toast-message-ts.git"
  },
  "bugs": {
    "url": "https://github.com/noorjsdivs/react-native-toast-message-ts/issues"
  },
  "homepage": "https://www.reactbd.com/npm-packages/react-native-toast-message-typescript",
  "funding": {
    "type": "buymeacoffee",
    "url": "https://buymeacoffee.com/reactbd"
  },
  "packageManager": "pnpm@9.15.3",
  "keywords": [
    "react-native",
    "toast",
    "toast-message",
    "notification",
    "alert",
    "snackbar",
    "popup",
    "expo",
    "typescript",
    "react-native-toast",
    "toast-notification",
    "mobile",
    "ios",
    "android"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "rm -rf ./lib && rollup -c",
    "prettier": "./node_modules/.bin/prettier --write",
    "lint": "./node_modules/.bin/eslint --fix",
    "lint-staged": "./node_modules/.bin/lint-staged",
    "test": "./node_modules/.bin/jest",
    "yalc:push": "npm run build && yalc publish --push",
    "quality": "npm run lint && tsc --noEmit"
  },
  "author": "Noor Mohammad",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@testing-library/react": "^16.3.1",
    "@testing-library/react-native": "^12.9.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-jest": "^29.12.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "import-sort-style-module": "^6.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "prettier-plugin-import-sort": "^0.0.7",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.76.0",
    "react-native-web": "^0.19.10",
    "react-test-renderer": "18.3.1",
    "rollup": "^4.30.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "yalc": "^1.0.0-pre.53"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md}": "npm run prettier",
    "*.{js,jsx,ts,tsx}": "npm run lint"
  }
}
